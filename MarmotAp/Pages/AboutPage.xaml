<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarmotAp.Pages.AboutPage"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="True"
             Title="{Binding Title}">

    <ScrollView VerticalOptions="FillAndExpand">
        <VerticalStackLayout Padding="24">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,*"
                  RowSpacing="8"
                  ColumnDefinitions="*,*,*,*,*"
                  HorizontalOptions="Fill"
                  VerticalOptions="Start">

                <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                    <Label Text="{Binding Name}" Grid.Column="0"
                           VerticalOptions="Center"
                           Style="{StaticResource MediumLabel}"/>

                    <Image HeightRequest="64" Grid.Column="2"
                           VerticalOptions="End"
                           Source="logo_432x432.png}"/>
                    </Grid>
                </HorizontalStackLayout>

                <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                       Text="{Binding Version, StringFormat='Version {0}'}"
                       Style="{StaticResource MediumLabel}"/>

                <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
                       Text="{Binding Build, StringFormat='Build {0}'}"
                       Style="{StaticResource MediumLabel}"/>
                
                <Label Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"
                       Text="{Binding ESP32Ver}" 
                       Style="{StaticResource MediumLabel}" />

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>