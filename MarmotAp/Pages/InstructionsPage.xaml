<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarmotAp.Pages.InstructionsPage"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="True"
             Title="{Binding Title}">

    <ScrollView VerticalOptions="FillAndExpand">
        <VerticalStackLayout Padding="24">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*"
                  RowSpacing="8"
                  HorizontalOptions="Fill"
                  VerticalOptions="Start">
                <Label Grid.Row="0"
                       Text="Instructions."
                       Style="{StaticResource MediumLabel}"/>

                <Label Grid.Row="1"
                       Text="Scan only for Bluetooth LE FIREPUNK devices."
                       Style="{StaticResource MediumLabel}"/>

                <Label Grid.Row="2"
                       Text="Click Status and connect to view (Tune,Lockup,Gear,MPH) etc.."
                       Style="{StaticResource MediumLabel}"/>

                <Label Grid.Row="3"
                       Text="Tested with Anteater on Android smartphone version 13 API 33."
                       Style="{StaticResource MediumLabel}"/>

                <Label Grid.Row="4"
                       Text="Please make sure the Anteater device is connected and powered on."
                       Style="{StaticResource MediumLabel}"/>

                <Label Grid.Row="5"
                       Text="To change tunes for anteater go to the Tunes Page."
                       Style="{StaticResource MediumLabel}"/>

                <Label Grid.Row="6"
                       Text="Go to the Settings Page to change the device theme and device name."
                       Style="{StaticResource MediumLabel}"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>